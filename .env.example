# Portal IQ Environment Variables
# ================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# =============================================================================
# API Keys (Required)
# =============================================================================

# College Football Data API
# Get your key at: https://collegefootballdata.com/key
CFBD_API_KEY=your_cfbd_api_key_here

# Portal IQ API Key (for internal API authentication)
# Generate a secure random key for production
PORTAL_IQ_API_KEY=your_api_key_here

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Secret key for JWT tokens
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PocketBase server URL
POCKETBASE_URL=http://localhost:8090

# PocketBase JWT secret (must match PocketBase settings)
POCKETBASE_JWT_SECRET=your_jwt_secret_here

# PostgreSQL connection (if using external DB instead of PocketBase)
# DATABASE_URL=postgresql://user:password@localhost:5432/portal_iq

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# External Data Sources (Optional - for enhanced features)
# =============================================================================

# On3 NIL API (if available)
# ON3_API_KEY=

# 247Sports API (if available)
# COMPOSITE_API_KEY=

# Spotrac API (for NFL salary data)
# SPOTRAC_API_KEY=

# Pro Football Reference API
# PFR_API_KEY=

# ESPN API
# ESPN_API_KEY=

# Twitter/X API (for social media metrics)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_BEARER_TOKEN=

# Instagram Basic Display API
# INSTAGRAM_APP_ID=
# INSTAGRAM_APP_SECRET=

# =============================================================================
# Social Media APIs (for follower counts)
# =============================================================================

# Twitter/X API v2
# TWITTER_BEARER_TOKEN=

# Instagram Graph API
# INSTAGRAM_ACCESS_TOKEN=

# TikTok API
# TIKTOK_ACCESS_TOKEN=

# =============================================================================
# Logging & Monitoring
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# =============================================================================
# Rate Limiting
# =============================================================================

# Requests per minute by tier
FREE_TIER_RPM=10
PRO_TIER_RPM=60
ENTERPRISE_TIER_RPM=300

# =============================================================================
# Model Configuration
# =============================================================================

# Path to saved models directory
MODELS_PATH=models/saved

# Enable/disable specific models
ENABLE_NIL_MODEL=true
ENABLE_PORTAL_MODEL=true
ENABLE_DRAFT_MODEL=true
ENABLE_WIN_MODEL=true

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Streamlit server port
STREAMLIT_PORT=8501

# API URL for dashboard to connect to
API_BASE_URL=http://localhost:8000

# =============================================================================
# PlaymakerVC Integration (Production)
# =============================================================================

# PlaymakerVC webhook URL for real-time updates
# PLAYMAKER_WEBHOOK_URL=

# PlaymakerVC API key for callbacks
# PLAYMAKER_API_KEY=

# =============================================================================
# AWS Configuration (for production deployment)
# =============================================================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=portal-iq-data

# =============================================================================
# Feature Flags
# =============================================================================

# Enable demo mode (uses sample data when real data unavailable)
ENABLE_DEMO_MODE=true

# Enable SHAP explanations (computationally expensive)
ENABLE_SHAP_EXPLANATIONS=true

# Enable caching
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
